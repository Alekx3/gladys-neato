<script src="/hooks/neato/js/neato.config.js"></script>
<script src="/hooks/neato/js/neato.service.js"></script>
<script src="/hooks/neato/js/neato.controller.js"></script>

<div data-ng-controller="neatoCtrl as vm">
  <div class="row" ng-show="!vm.ready">
    <div class="col-centered col-md-6 col-md-offset-6">
      <div class="spinner-box">
        <div class="spinner">
          <div class="double-bounce1"></div>
          <div class="double-bounce2"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="row" ng-show="vm.ready" ng-cloak>
    <div class="col-centered col-md-12">
      <button class="btn btn-flat btn-primary margin" ng-click="vm.saveConfig()"><i class="fa fa-save"></i> {{ 'SAVE_SETTINGS' |
        translate }}</button>
    </div>
  </div>

  <div class="row" ng-show="vm.ready" ng-cloak>
    <div class="col-centered col-md-6" >
      <div class="box skin-box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Your Neato Bot</h3>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>
                  {{ 'SPECIFY_NAME' | translate }}
                </th>
              </tr>
            </thead>
            <tbody>
              <tr class="ng-cloak">
                <td><input type="text" placeholder="{{ 'NEATO_NAME' | translate }}" class="form-control" ng-model="type.friendlyName"  /></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- box-->
    </div>
  </div>
  <!-- row -->

</div>